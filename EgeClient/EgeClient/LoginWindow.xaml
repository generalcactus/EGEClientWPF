<Window x:Class="EgeClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Вход в систему" 
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White"
        Icon="/Resourses/Gemini_Generated_Image_231mz5231mz5231m.ico"
        >

    <Window.Resources>
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007bff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputStudakStyle" TargetType="xctk:MaskedTextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ChoseGroupStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6c757d"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="40,16,40,0" VerticalAlignment="Top" x:Name="MainContainment">
            <!-- Login Form -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="8" Padding="30" Background="#f8f9fa" Height="411">
                <StackPanel>

                    <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,30"/>


                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0 15">
                        <TextBlock Text="Школьник" Margin="0,0,140,0" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#666" Visibility="Hidden"/>
                        <ToggleButton Width="40" Height="20" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Visibility="Hidden">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border" 
                                                        Background="LightGray" 
                                                        CornerRadius="10"
                                                        BorderThickness="1"
                                                        BorderBrush="Gray">
                                                    <Ellipse x:Name="ellipse" 
                                                        Margin="2,0,0,0" 
                                                        Fill="White"
                                                        Stroke="Gray" Height="17" VerticalAlignment="Center" HorizontalAlignment="Left" Width="18"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                                        <Setter TargetName="ellipse" Property="HorizontalAlignment" Value="Right"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </StackPanel>


                    <!-- Email/Login -->
                    <TextBlock Text="ФИО" FontSize="16" FontWeight="SemiBold" 
                              Margin="0,0,0,5" Foreground="#666"/>
                    <TextBox x:Name="txtUsername" Style="{StaticResource InputFieldStyle}" 
                            Height="40"/>

                    <TextBlock x:Name="GroupName" Text="Группа" FontSize="12" FontWeight="SemiBold" 
                            Margin="0,0,0,5" Foreground="#666" Visibility="Hidden"/>
                    <ComboBox x:Name="txtUserGroup" Style="{StaticResource ChoseGroupStyle}" 
                            Height="40" Visibility="Hidden"/>

                    <!-- Password -->
                    <TextBlock x:Name="labelStudCard" Text="Студенческий билет" FontSize="12" FontWeight="SemiBold" 
                              Margin="0,15,0,5" Foreground="#666" Visibility="Hidden"/>
                    <xctk:MaskedTextBox x:Name="txtUserStudCard" Mask="000 00 00" Style="{StaticResource InputStudakStyle}" 
                            Height="40" Visibility="Hidden"/>


                    <!-- Login Button -->

                    <Button x:Name="btnLogin" Content="Войти" Style="{StaticResource LoginButtonStyle}" Click="btnLogin_Click" FontSize="16"/>

                    <!-- Error Message -->
                    <Border x:Name="errorMessage" Background="#f8d7da" BorderBrush="#f5c6cb" 
                           BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,15,0,0"
                           Visibility="Collapsed">
                        <TextBlock x:Name="txtError" Text="Неверный логин или пароль" 
                                  Foreground="#721c24" FontSize="12" TextWrapping="Wrap"/>
                    </Border>

                </StackPanel>
            </Border>

            <!-- Login Form -->

        </StackPanel>
    </Grid>
</Window>