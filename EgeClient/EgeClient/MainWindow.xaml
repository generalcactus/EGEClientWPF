<Window x:Class="EgeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЕГЭ по информатике - Подготовка" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e9ecef"/>
                    <Setter Property="Foreground" Value="#007bff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#dee2e6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="Demid" FontSize="24" FontWeight="Bold" Foreground="#007bff"/>
                    <TextBlock Text="Информатика" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Главная" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Варианты" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Задания" Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Button x:Name="btnLogin" Content="Войти" Click="btnLogin_Click" 
                            Style="{StaticResource MenuButtonStyle}" Background="#007bff" 
                            Foreground="White" Padding="20,10" Margin="0,0,10,0"/>
                    <Button x:Name="btnStartExam" Content="Начать экзамен" Click="btnStartExam_Click"
                            Background="#28a745" Foreground="White" Padding="20,10"
                            BorderThickness="0" Cursor="Hand" FontSize="14"/>
                    <Button x:Name="btnExit" Content="Выход" Click="btnExit_Click"
                            Background="#dc3545" Foreground="White" Padding="15,8"
                            BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Hero Section -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Сдача ЕГЭ по информатике" 
                                      FontSize="32" FontWeight="Bold" Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Тренировочные варианты, разбор заданий и теория для успешной сдачи экзамена" 
                                      FontSize="16" Foreground="#666" Margin="0,0,0,20"/>
                            <Button Content="Начать экзамен" Background="#007bff" 
                                    Foreground="White" Padding="25,15" FontSize="16"
                                    BorderThickness="0" Cursor="Hand" 
                                    Click="btnStartExam_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Features Grid -->
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <!-- Варианты -->
                    <Border Style="{StaticResource CardStyle}" Width="300" Height="200">
                        <StackPanel>
                            <TextBlock Text="📝" FontSize="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="Варианты" FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="" 
                                      TextWrapping="Wrap" TextAlignment="Center" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Задания по темам -->
                    <Border Style="{StaticResource CardStyle}" Width="300" Height="200">
                        <StackPanel>
                            <TextBlock Text="🔢" FontSize="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="Задания по номерам" FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="" 
                                      TextWrapping="Wrap" TextAlignment="Center" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#343a40" Padding="20">
            <TextBlock Text="© 2025 ЕГЭ по информатике. Платформа для сдачи экзамена." 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>