                        <Button Content="24" Style="{StaticResource TaskButtonStyle}" Click="TaskButton_Click"/>
                        <Button Content="25" Style="{StaticResource TaskButtonStyle}" Click="TaskButton_Click"/>
                        <Button Content="26" Style="{StaticResource TaskButtonStyle}" Click="TaskButton_Click"/>
                        <Button Content="27" Style="{StaticResource TaskButtonStyle}" Click="TaskButton_Click"/>
                    </WrapPanel>

                    <!-- Timer and Controls -->
                    <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                            Margin="0,20,0,0" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Время" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="16"/>
                            <TextBlock x:Name="txtTimer" Text="03:55:42" FontSize="18" FontWeight="Bold" 
                                      Foreground="#dc3545" HorizontalAlignment="Center"/>

                            <Button Content="Завершить вариант" Background="#dc3545" Foreground="White"
                                    Padding="10,5" Margin="0,10,0,0" BorderThickness="0" Cursor="Hand"
                                    Click="btnFinishExam_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

