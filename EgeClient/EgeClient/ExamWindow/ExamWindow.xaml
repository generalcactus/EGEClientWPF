                                    <Image x:Name="TaskImage" MaxHeight="700" Stretch="Uniform"  Margin="0,0,0,10" ></Image>
                                </StackPanel>

                                <StackPanel x:Name="TableAnswerPanel" Grid.Column="1" Visibility="Visible" Grid.RowSpan="2">
